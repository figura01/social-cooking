<div class="container">
    <h1>Edit User</h1>
    {{user}}

    <form class="form form-edit" action="/users/{{user._id}}/edit" method="POST" enctype="multipart/form-data">
        
        <div class="form-group">
            <label for="input-firstName">First Name</label>
            <input type="text" id="input-firstName" name="firstname" value="{{user.firstname}}" />
        </div>

        <div class="form-group">
            <label for="input-lastName">Last Name</label>
            <input type="text" id="input-lastName" name="lastname" value="{{user.lastname}}" />
        </div>

        <div class=" form-group">
            <label for="input-email">Email</label>
            <input type="email" id="input-email" name="email" value="{{user.email}}" />
        </div>

        <div class=" form-group">
            <label for="input-password">Edit a new Password</label>
            <input type="password" id="input-password" name="newPassword" />
            <input type="text" id="input-old-password" value="{{user.password}}" name="password" hidden="true" />
        </div>

        <div class="form-group">
            <span>Genre</span>
            {{#isEqualString user.genre "men"}}
            <label>Men <input type="radio" id="input-genre-men" name="genre" value="men" checked></label>
            <label>Women <input type="radio" id="input-genre-men" name="genre" value="women"></label>
            {{else}}
            <label>Men <input type="radio" id="input-genre-men" name="genre" value="men"></label>
            <label>Women <input type="radio" id="input-genre-men" name="genre" value="women" checked></label>
            {{/isEqualString}}
        </div>

        <label>Current Avatar</label>
        <img src={{user.avatar}} />
        <input type="text" name="oldAvatar" id="input-file" value={{user.avatar}} hidden="true">

        <div>
            <label for="input-newavatar-file">Update a New avatar</label>
            <input type="file" name="newAvatar" id="input-newavatar-file" />
        </div>
        <div class="footer-form">
            <button>update</button>
        </div>
    </form>

</div>