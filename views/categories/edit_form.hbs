<div class="container">
    <h1>Edit category</h1>

    <form class="form" method="POST" action="/categories/{{category._id}}/edit">
        <label for="input-label">Label</label>
        <input class="input" type="text" id="input-label" value="{{category.label}}" name="label">
        <button>Update</button>
        <p>{{error_message}}</p>
    </form>
</div>